@model NYCMappingWebApp.Entities.AddUserTabs

@{
    ViewBag.Title = "Delete";
}

<div class="container body-content">
    <h2>Are you sure you want to delete this user privileges?</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="col-sm-2 control-label" style="padding-top: 0px">Username</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" style="padding-top: 0px">Tabs</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.TabIDs)
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input type="submit" value="Delete" class="btn btn-primary btn-large" />
                    @Html.ActionLink("Cancel", "UserTabs", new { @class = "btn btn-large" })
                </div>
            </div>
        </div>
    }
</div>